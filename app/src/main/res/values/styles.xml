<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
        <item name="listPreferredItemHeightSmall">60dp</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/sf_pro_medium</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Medium">
        <item name="android:fontFamily">@font/sf_medium</item>
    </style>

    <style name="AppTheme.Regular">
        <item name="android:fontFamily">@font/sf_regular</item>
    </style>

    <style name="AppTheme.Drawer" parent="AppTheme">
        <item name="android:textSize">14sp</item>

    </style>

    <style name="AppTheme.CustomCheckedTextView" parent="@android:style/Widget.Holo.Light.CheckedTextView">
        <item name="android:paddingTop">@dimen/CustomCheckedTextView_padding_top_bottom</item>
        <item name="android:paddingBottom">@dimen/CustomCheckedTextView_padding_top_bottom</item>
        <item name="android:textColor">@color/custom_checked_view_text_color</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/sf_pro_medium</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="AppTheme.FilterTitle" parent="AppTheme">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/sf_pro_medium</item>
        <item name="android:textColor">@color/filter_title_text_color</item>
    </style>

    <style name="AppTheme.MainButtonStyle" parent="AppTheme">
        <item name="android:background">@drawable/ic_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingStart">100dp</item>
        <item name="android:paddingEnd">100dp</item>
        <item name="android:fontFamily">@font/sf_pro_bold</item>
    </style>

    <style name="AppTheme.ToolbarStyle" parent="AppTheme">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
    </style>

    <style name="AppTheme.CardText" parent="AppTheme">
        <item name="android:fontFamily">@font/sf_pro_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme.Calendar" parent="AppTheme">
        <item name="fontFamily">@font/sf_pro_medium</item>
        <item name="android:textColorPrimaryInverse">@color/colorPrimary</item>
        <item name="colorAccent">#FFF</item>
        <item name="android:textColorPrimary">#FFF</item>
        <item name="android:textColorSecondary">#FFF</item>
        <item name="android:textColorSecondaryInverse">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorAccent">#FFF</item>
    </style>

</resources>
