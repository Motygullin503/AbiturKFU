<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.kpfu.itis.abiturkfu">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activities.FilterActivity"
            android:label="Фильтры"
            android:parentActivityName=".view.activities.MainActivity" />
        <activity
            android:name=".view.activities.FacilityActivity"
            android:label="Факультет" />
        <activity
            android:name=".view.activities.AboutFacilityActivity"
            android:label="О факультете" />
        <activity
            android:name=".view.activities.PlanActivity"
            android:label="План приёма" />
        <activity
            android:name=".view.activities.FilteredFacilitiesActivity"
            android:label="Факультеты" />
        <activity
            android:name=".view.activities.AboutExamsActivity"
            android:label="Об экзаменах" />
        <activity
            android:name=".view.activities.CourseActivity"
            android:label="Курс" />
        <activity
            android:name=".view.activities.ContestActivity"
            android:label="Конкурсы" />
        <activity
            android:name=".view.activities.HowToApplyActivity"
            android:label="Шаги поступления" />
    </application>

</manifest>