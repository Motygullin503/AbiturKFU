<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/colorAccent" />
            <corners android:bottomLeftRadius="@dimen/CustomCheckedTextView_corner_round" android:bottomRightRadius="@dimen/CustomCheckedTextView_corner_round" />
        </shape>
    </item>

    <item android:layout_width="wrap_content" android:layout_height="wrap_content" android:state_selected="true">
        <shape>
            <solid android:color="@color/colorAccent" />
            <corners android:bottomLeftRadius="@dimen/CustomCheckedTextView_corner_round" android:bottomRightRadius="@dimen/CustomCheckedTextView_corner_round" />
        </shape>
    </item>

    <item>
        <layer-list>

            <item>
                <shape>
                    <solid android:color="@color/filterBack" />
                    <corners android:bottomLeftRadius="@dimen/CustomCheckedTextView_corner_round" android:bottomRightRadius="@dimen/CustomCheckedTextView_corner_round" />
                </shape>
            </item>
            <item android:gravity="top">
                <shape android:shape="rectangle">
                    <solid android:color="@color/filter_divider_color" />
                    <size android:height="0.5dp" />
                </shape>
            </item>

        </layer-list>
    </item>

</selector>