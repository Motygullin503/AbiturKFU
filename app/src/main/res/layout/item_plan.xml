<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/CustomCheckedTextView_corner_round"
        app:cardElevation="@dimen/cardview_default_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_medium"
                android:textColor="@color/grey"
                android:textSize="18sp"
                tools:text="Автоматизация технологических процессов и производств" />

            <TextView
                android:id="@+id/tv_study_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/sf_pro_medium"
                android:textColor="@color/filter_title_text_color"
                android:textSize="16sp"
                tools:text="Форма обучения: очная, заочная" />

            <TextView
                android:id="@+id/tv_counts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/sf_pro_medium"
                android:textColor="@color/filter_title_text_color"
                android:textSize="16sp"
                tools:text="Количество мест: 15 бюджетных, 18 по контракту" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>