<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/colorAccent" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/colorAccent" />
        </shape>
    </item>

    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/filterBack" />
                </shape>
            </item>
            <item android:bottom="@dimen/CustomCheckedTextView_divider_padding" android:gravity="start" android:top="@dimen/CustomCheckedTextView_divider_padding">
                <shape>
                    <solid android:color="@color/filter_divider_color" />
                    <size android:width="0.5dp" />
                </shape>
            </item>
            <item android:bottom="@dimen/CustomCheckedTextView_divider_padding" android:gravity="end" android:top="@dimen/CustomCheckedTextView_divider_padding">
                <shape>
                    <solid android:color="@color/filter_divider_color" />
                    <size android:width="0.5dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>